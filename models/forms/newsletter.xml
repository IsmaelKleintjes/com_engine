<?xml version="1.0" encoding="utf-8"?>
<form>
<fieldset name="essential" addfieldpath="/administrator/components/com_engine/models/fields">
    <field
            name="name"
            type="text"
            label="Naam"
            class="inputbox validate"
            labelclass="control-label"
            required="true"
            default=""
            />

    <field
            name="email"
            type="email"
            label="E-mail"
            validate="email"
            class="inputbox validate"
            labelclass="control-label"
            required="true"
            default=""
            />
	</fieldset>

	<fieldset name="hidden">
		<field 
			name="id"
			type="hidden"
		/>
        <field name="published"
               type="hidden"
               default="1"
        />
	</fieldset>
</form>